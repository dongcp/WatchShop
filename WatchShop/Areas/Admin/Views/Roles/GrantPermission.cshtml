@model Models.EF.Role
@using PagedList.Mvc;
@using Models.EF;

@{
    ViewBag.Title = "GrantPermission";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<User> users = (List<User>)ViewData["users"];
    List<UserGroup> groups = (List<UserGroup>)ViewData["groups"];
}

@section PageHeader{
    Quyền @Model.Name.ToLower()
}

<div class="col-lg-15">
    <!-- /.panel-heading -->
    <div class="panel-body">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#groups" data-toggle="tab">Nhóm người dùng</a>
            </li>
            <li>
                <a href="#users" data-toggle="tab">Người dùng</a>
            </li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane fade in active" id="groups">
                <div class="col-lg-12" style="margin-top:30px">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <a href="@Url.Action("Groups", "Roles", new { roleId = @Model.Id })"><i class="fa fa-plus" aria-hidden="true"></i> Thêm nhóm người dùng</a>
                        </div>
                        <div class="panel-body">
                            <div class="bs-example widget-shadow">
                                <table class="table table-striped table-bordered table-hover">
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Tên nhóm
                                        </th>
                                        <th></th>
                                    </tr>

                                    @{int groupIndex = 1;}
                                    @foreach (var item in groups)
                                    {
                                        <tr class="odd gradeA">
                                            <td>
                                                @groupIndex
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                <a href="#" class="delete-item" data-target="#confirmation-dialog" data-toggle="modal" data-id="@item.Id">Xóa</a>
                                            </td>
                                        </tr>
                                        groupIndex++;
                                    }
                                </table>
                            </div>
                            @*<div style="text-align:center">
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                                </div>*@
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="users">
                <div class="col-lg-12" style="margin-top:30px">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <a href="@Url.Action("Users", "Roles", new { roleId = @Model.Id })"><i class="fa fa-plus" aria-hidden="true"></i> Thêm người dùng</a>
                        </div>
                        <div class="panel-body">
                            <div class="bs-example widget-shadow">
                                <table class="table table-striped table-bordered table-hover">
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Tên tài khoản
                                        </th>
                                        <th>
                                            Tên người dùng
                                        </th>
                                        <th></th>
                                    </tr>

                                    @{int userIndex = 1;}
                                    @foreach (var item in users)
                                    {
                                        <tr class="odd gradeA">
                                            <td>
                                                @userIndex
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Username)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                <a href="#" class="delete-item" data-target="#confirmation-dialog" data-toggle="modal" data-id="@item.Username">Xóa</a>
                                            </td>
                                        </tr>
                                        userIndex++;
                                    }
                                </table>
                            </div>
                            @*<div style="text-align:center">
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                                </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.panel -->
    </div>
</div>

